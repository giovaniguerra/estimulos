<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- default -->
    <item
        android:state_pressed="false"
        android:state_selected="false">
        <shape >
            <solid
                android:color="#00000000" />
            <stroke
                android:width="2dp"
                android:color="#000" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>

    <!-- button focused -->
    <item
        android:state_selected="true">
        <shape >
            <solid
                android:color="#1f000000" />
            <stroke
                android:width="2dp"
                android:color="#000" />
            <padding
                android:left="7dp"
                android:top="7dp"
                android:right="7dp"
                android:bottom="7dp" />
            <corners
                android:radius="4dp" />
        </shape>
    </item>
</selector>