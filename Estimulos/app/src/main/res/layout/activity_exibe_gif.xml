<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroud_list"
    android:id="@+id/layoutGifs">



    <br.com.estimulos.app.ui.adapter.GifParabens
        android:id="@+id/gifParabens"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">



        <br.com.estimulos.app.ui.adapter.GifAplauso
            android:id="@+id/gif"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:scaleType="fitCenter"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/imageEstimulo"
            android:layout_weight="0.4"
            android:layout_gravity="center"
            android:src="@drawable/baloes"/>



    </LinearLayout>

</LinearLayout>